{
	"openapi": "3.0.1",

	"servers": [{
			"description": "API para o envio de notificões Push para produtos TOTVS Saúde",
			"url": "http://{domain}:{port}/api/healthcare/prosaude/v1/",
			"variables": {
				"domain": {
					"default": "localhost"
				},
				"port": {
					"default": "8080"
				}
			}
		}
	],

	"info": {
		"description": "API para o envio de notificões Push para produtos TOTVS Saúde",
		"version": "1.000",
		"title": "PushNotification",
		"contact": {
			"name": "T-Talk",
			"url": "api.totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "PushNotification",
				"description": "Notificação Push",
				"segment": "Healthcare"
			},
			"productInformation": [{
					"product": "prosaude",
					"contact": "TOTVS.SAUDE.SQUAD.SAUMOB@totvs.com.br",
				}
			]
		}
	},

	"paths": {
		"/notifications/push/send": {
			"post": {
				"tags": [
					"PushNotification"
				],
				"summary": "Envia uma notificação Push",
				"x-totvs": {
					"productInformation": [{
							"product": "ProSaude",
							"avaliable": true,
							"note": "Este verbo esta disponivel com todos parametros",
						}
					]
				},
				"description": "Envia uma notificação Push",
				"operationId": "Register",
				"requestBody": {
					"description": "Objeto que representa a notificação Push",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/PushNotification_1_000.json"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Uma cópia da notificação enviada",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/PushNotification_1_000.json"
								}
							}
						}
					},
					"204": {
						"description": "Sem conteúdo",
					}
				}
			}
		}
	}
}
