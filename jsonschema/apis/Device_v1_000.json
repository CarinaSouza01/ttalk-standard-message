{
	"openapi": "3.0.1",

	"servers": [{
			"description": "API para registro de dispositivos móveis para produtos TOTVS Saúde",
			"url": "http://{domain}:{port}/api/healthcare/prosaude/v1/",
			"variables": {
				"domain": {
					"default": "localhost"
				},
				"port": {
					"default": "8080"
				}
			}
		}
	],

	"info": {
		"description": "API para registro de dispositivos móveis para produtos TOTVS Saúde",
		"version": "1.000",
		"title": "DeviceDto",
		"contact": {
			"name": "T-Talk",
			"url": "api.totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "DeviceDto",
				"description": "Dispositivo Móvel",
				"segment": "Healthcare"
			},
			"productInformation": [{
					"product": "prosaude",
					"contact": "TOTVS.SAUDE.SQUAD.SAUMOB@totvs.com.br",
				}
			]
		}
	},

	"paths": {
		"/devices": {
			"post": {
				"tags": [
					"Devices"
				],
				"summary": "Inclui um novo registro de dispositivos móveis",
				"x-totvs": {
					"productInformation": [{
							"product": "ProSaude",
							"avaliable": true,
							"note": "Este verbo esta disponivel com todos parametros",
						}
					]
				},
				"description": "Inclui um novo registro de dispositivos móveis",
				"operationId": "Register",
				"requestBody": {
					"description": "Objeto para criar o registro de dispositivos móveis",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/DeviceDto_1_000.json#"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Uma cópia do registro inserido",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/DeviceDto_1_000.json#"
								}
							}
						}
					},
					"500": {
						"description": "Erro na execução da operação",
						"content": "string"
					}
				}
			}
		},
		"/{id}/refreshToken": {
			"patch": {
				"tags": [
					"Devices"
				],
				"summary": "Atualiza o token gerado pela API de notificações Push",
				"x-totvs": {
					"productInformation": [{
							"product": "ProSaude",
							"avaliable": true,
							"note": "Este verbo esta disponivel com todos parametros"
						}
					]
				},
				"description": "Atualiza o token gerado pela API de notificações Push",
				"operationId": "RefreshToken",
				"parameters": [{
						"in": "path",
						"name": "id",
						"description": "Identificador do dispositivo móvel",
						"required": true,
						"schema": {
							"type": "System.Guid"
						}
					}
				],
				"requestBody": {
					"description": "Objeto para atualizar o token gerado pela API de notificações Push",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/DeviceDto_1_000.json#"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Uma cópia do registro atualizado",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/DeviceDto_1_000.json#"
								}
							}
						}
					},
					"500": {
						"description": "Erro na execução da operação",
						"content": "string"
					}
				}
			}
		}
	}
}
